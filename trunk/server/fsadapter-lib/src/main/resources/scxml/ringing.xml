<sc:scxml  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns:sc='http://www.w3.org/2005/07/scxml'
   xmlns:ms='http://telmi.se/MS'
   xsi:schemaLocation='
   http://www.w3.org/2005/07/scxml
   scxml.xsd
   http://telmi.se/MS
   telmims.xsd' initialstate="play">


   <sc:state id="play">
       <sc:onentry>
           <ms:answer />
           <ms:playaudio value="'tone_stream://L=60%(2000,4000,440,480);%(2000,4000,440,480)'" />
           <ms:hangup />
       </sc:onentry>

       <sc:transition event="hangup">
           <sc:log expr="'Call was ended'" />
       </sc:transition>

   </sc:state>

</sc:scxml>
