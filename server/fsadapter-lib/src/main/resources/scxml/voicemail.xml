<?xml version="1.0" encoding="UTF-8"?>
<sc:scxml  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns:sc='http://www.w3.org/2005/07/scxml'
   xmlns:ms='http://telmi.se/MS'
   xsi:schemaLocation='
   http://www.w3.org/2005/07/scxml
   scxml.xsd
   http://telmi.se/MS
   telmims.xsd' initialstate="welcome">

    <sc:datamodel >
        <sc:data name="test" />
        <sc:data name="number" expr="1" />
        <sc:data name="voicmail" src="voicemail-data.xml"/>
    </sc:datamodel>


    <sc:state id="welcome">

        <sc:transition target="voicemail">
            <ms:playaudio value="you-have.wav" />
            <ms:
        </sc:transition>

    </sc:state>

    <sc:state id="voicemail">
        <sc:onentry>
            <sc:assign name="test" expr="Data(voicmail, 'voicemails/voicemail[' + number +']/file/text()')" />
            <sc:log expr="test" />
            <ms:answer />
            <ms:say>'Hello world'</ms:say>
            <ms:hangup />
        </sc:onentry>
    </sc:state>
</sc:scxml>
