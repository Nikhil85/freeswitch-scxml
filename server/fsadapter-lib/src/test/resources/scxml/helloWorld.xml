<scxml xmlns="http://www.w3.org/2005/07/scxml"
       xmlns:ms="http://telmi.se/MS"
              version="1.0"
              initialstate="main">

    <state id="main" final="true" >
        
       <onentry>
            <ms:answer/>
            <ms:say>'Hello World'</ms:say>
            <ms:getdigits var="mydigits" termdigits="#" />
        </onentry>
      
         <transition event="termdigit" target="exit" >
            <log expr="'termdigit'"  />
        </transition>

        <transition event="maxtime" target="exit">
            <log expr="'maxtime'"  />
        </transition>

        <transition event="maxdigits" target="exit">
            <exit namelist="maxdigits" />
        </transition>
     
    </state>

    <state id="exit" final="true">
         <onentry>
            <ms:hangup/>
        </onentry>
  </state>
</scxml>

